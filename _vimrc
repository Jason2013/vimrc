set encoding=utf-8
set termencoding=utf-8
set number

set fileencodings=utf-8,gbk
set fileencoding=utf-8
set fileformat=dos

language messages zh_CN.utf-8

" 开启语法着色
syntax on
colorscheme desert

" 开启光标位置显示
set ruler

set tabstop=4
set softtabstop=4
set expandtab

set smartindent

" 设置交换文件目录
set directory=.,$TEMP
